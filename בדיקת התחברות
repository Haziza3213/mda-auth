<h1>ברוך הבא למערכת</h1>
<p>עליך להתחבר באמצעות דיסקורד כדי להמשיך.</p>

<!-- כפתור התחברות ל-Discord -->
<a class="btn" href="https://discord.com/oauth2/authorize?client_id=1369423600339255297&redirect_uri=https%3A%2F%2Fhaziza3213.github.io%2Fmda-auth%2F&response_type=token&scope=identify">
  התחברות עם דיסקורד 🔐
</a>

<div id="status" class="status"></div>

<script>
  // רשימת משתמשים מורשים לפי Discord ID
  const allowedIDs = ['123456789012345678', '987654321098765432']; // החלף באיידי האמיתיים שלך

  window.addEventListener('load', async () => {
    const hash = window.location.hash;
    if (hash.startsWith('#access_token=')) {
      const params = new URLSearchParams(hash.substring(1));
      const token = params.get('access_token');

      const res = await fetch('https://discord.com/api/users/@me', {
        headers: {
          Authorization: `Bearer ${token}
        }
      });

      const user = await res.json();
      const statusDiv = document.getElementById('status');

      if (user.id) {
        if (allowedIDs.includes(user.id)) {
          statusDiv.textContent = `✅ ברוך הבא, ${user.username}#${user.discriminator} (ID: ${user.id})`;
        } else {
          statusDiv.innerHTML = `⛔ אין לך הרשאה. Discord ID: ${user.id}`;
          statusDiv.classList.add('denied');
        }
      } else {
        statusDiv.textContent = 'שגיאה באימות.';
      }
    }
  });
</script>

</body>
</html>
